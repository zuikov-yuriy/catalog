{% extends "AcmeCatalogBundle::layout.html.twig" %}

{% block title %}Авторизация{% endblock %}

{% block body %}

<div style="margin:0 auto; width:225px;">
    <div style="font-size:18px; text-align:center; color:#666; margin-bottom:10px;">Авторизация</div>

	<form action="{{ path('login_check') }}" method="post">
		<label for="username">Username:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" />
		<label for="password">Password:</label>
		<input type="password" id="password" name="_password" />
		<input type="hidden" name="_target_path" value="/redirect" />
		<center>
		<input type="submit" name="login" class="btn btn-info"/>
		</center>
	</form>
	
		{% if error %}
		   <span style="color:red;">Ошибка:</span><span>{{ error.message }}!</span>
  	        {% endif %}
</div>


{% endblock %}
